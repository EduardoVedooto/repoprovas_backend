{
  "compilerOptions": {
    "lib": [
      "ESNext", "DOM"
    ],
    "module": "commonjs",
    "target": "ES6",
    "outDir": "./dist",
    "rootDir": ".",
    "removeComments": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@controllers/*": [
        "./src/controllers/*"
      ],
      "@services/*": [
        "./src/services/*"
      ],
      "@interface/*": [
        "./src/interfaces/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "**/*.test.ts"
, "entities"  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}